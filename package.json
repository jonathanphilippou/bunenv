{
  "name": "bunenv",
  "version": "0.1.1",
  "description": "A version manager for Bun, inspired by rbenv and pyenv. Allows switching between Bun versions.",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "bunenv": "bin/bunenv"
  },
  "files": [
    "dist",
    "bin",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:unit": "bun test test/unit",
    "test:component": "bun test test/component",
    "test:integration": "bun test test/integration",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint src/ --ext .ts",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "prettier": "latest"
  },
  "dependencies": {
    "commander": "latest",
    "semver": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonathanphilippou/bunenv.git"
  },
  "keywords": [
    "bun",
    "version",
    "manager",
    "env",
    "bunenv",
    "versions"
  ],
  "author": "Jonathan Philippou",
  "license": "MIT"
}
